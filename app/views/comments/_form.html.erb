<%= form_with(model: comment, url: blurb_comments_path(comment.blurb)) do |i| %>

  <div class="form-input">
    <%= i.label :bloob %>
    <%= i.rich_text_area :bloob, class: 'form-control', placeholder: "Write a comment"%>

    <%= i.submit 'Add Comment', class:'btn btn-success' %>
  </div>
<% end %>
